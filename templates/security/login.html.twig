{%  extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">


            <form method="post">
                <h1 class="h1 mb-3 font-weight-normal" style="margin-top: 2%;text-align: center">
                    <span class="oi oi-account-login"></span>
                    Connexion
                </h1>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}


        <div class="row">
            <div class="offset-3 col-sm-6">
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus style="margin-bottom: 20px">
            </div>
        </div>
        <div class="row">


            <div class="offset-3 col-sm-6">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required style="margin-bottom: 20px">

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <button class="btn btn-lg btn-primary" type="submit">
                    Se Connecter
                </button>
            </div>
        </div>

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}


            </form>


    </div>

{% endblock %}